<div>
    <% cars.forEach(function(car) { %>
    <div class="slide max-w-imgSlider my-28 relative hidden">

        <img class="rounded" src="../img/<%= car.model %>.jpg" alt="<%= car.model %>">
        <div class="absolute bottom-0 w-full p-2 shadow-2xl bg-white ">
            <div>
                <span>
                    <%= car.brand.name %>
                </span>
                <span><%= car.model  %></span>
            </div>
            <div class="flex justify-between">
                <span class="text-primary"><%= car.year + "." %></span>
                <span class="font-bold"><%= car.price + " $" %></span>
            </div>
        </div>
        <div class="progressBar bg-primary h-3 top-0 absolute"></div>
    </div>
    <% }); %>


    <script src="/javascript/slider.js"></script>
</div>