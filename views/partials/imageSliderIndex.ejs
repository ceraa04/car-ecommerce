<div>
    <% if(imgSliderCars.length > 0) { %>
    <% imgSliderCars.forEach(car => { %>
    <a href="/products/<%= car._id  %>">
        <div class="slide relative hidden">
            <div>
                <img class="rounded w-imgSlider h-imgSlider cursor-pointer" src="/img/<%= car.model %>.jpg"
                    alt="<%= car.model %>">
            </div>
            <div class="absolute bottom-0 w-full p-5 shadow-2xl bg-white ">
                <div class="text-xl">
                    <span>
                        <%= car.brand.name %>
                    </span>
                    <span><%= car.model  %></span>
                </div>
                <div class="flex justify-between">
                    <span class="text-primary"><%= car.year + "." %></span>
                    <span class="font-bold pr-10 text-2xl"><%= car.price + " $" %></span>
                </div>
            </div>
        </div>
    </a>
    <% }); %>
    <% } else { %>
    <p class="font-bodyFont text-xl">Database is empty.
        When you add some cars in it, slideshow of first 5 cars will
        appear here.
    </p>
    <% } %>



    <script src="/javascript/slider.js"></script>
</div>